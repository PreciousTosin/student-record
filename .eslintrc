{
  "extends": ["airbnb", "standard-react"],
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    // Additional, per-project rules...
    "no-console": 0,
    //Silence LF <> CRLF error
    "linebreak-style": 0
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    }
  }
}